{
  "name": "Readbox Extension",
  "version": "1.0",
  "manifest_version": 2,
  "description": "An extension to add the current page to your Readbox.",
  "browser_action": {
    "default_icon": "dropbox.png",
    "default_popup": "readbox.html"
  },
  "background": {
    "scripts": [ "chrome_ex_oauthsimple.js", "droplib.js", "dropcreds.js", "readbox.js", "context.js" ]
  },
  "permissions": [
    "https://api.dropbox.com/",
    "https://api-content.dropbox.com/",
    "<all_urls>",
    "pageCapture",
    "tabs",
    "contextMenus"
  ],
  "icons": {
    "16": "dropbox.png"
  }
}
